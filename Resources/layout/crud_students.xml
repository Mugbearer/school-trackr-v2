<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd">
    <ImageView
        android:layout_width="50in"
        android:layout_height="50in"
        android:src="@drawable/bg"
        android:layout_marginTop="80dp"/>
    <TextView
        android:text="STUDENT FORM"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valFullName"
        android:textColor="#ffff0000"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="23dp"/>
    <EditText
        android:inputType="textPersonName"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/fullName"
        android:layout_marginBottom="0.0dp"
        android:hint="Full Name"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:text="Gender:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"/>
    <RadioGroup
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="200dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/male" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/female" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="I don't want to specify"
            android:id="@+id/unspecified" />
    </RadioGroup>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valSchool"
        android:textColor="#ffff0000"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="25dp"/>
    <EditText
        android:inputType="text"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/school" 
        android:hint="School"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valCountry"
        android:textColor="#ffff0000"
         android:layout_marginTop="412dp"
        android:layout_marginLeft="25dp"/>
    <AutoCompleteTextView
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:id="@+id/country" 
        android:hint="Country"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/successCRUD"
        android:textColor="#ff00ff00" 
        android:layout_marginTop="220dp"
        android:layout_marginLeft="23dp"/>
    <Button
        android:text="Add"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btnAdd"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#66558A"/>
    <Button
        android:text="Search"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btnSearch" 
        android:layout_marginTop="460dp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="#66558A"/>
    <Button
        android:text="Update"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btnUpdate"
        android:layout_marginTop="505dp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="#66558A"/>
    <Button
        android:text="Delete"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/btnDelete" 
        android:layout_marginTop="505dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#66558A"/>
    <Button
        android:text="Log Out"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnLogOut" 
        android:layout_marginTop="0dp"
        android:layout_marginLeft="280dp"
        android:backgroundTint="#66558A"/>
</RelativeLayout>