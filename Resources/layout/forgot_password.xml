<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd">
    <ImageView
        android:layout_width="50in"
        android:layout_height="50in"
        android:src="@drawable/bg"
        android:layout_marginTop="80dp"
        android:contentDescription="background"/>
    <TextView
        android:text="FORGOT PASSWORD"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valEmailAddressFP"
        android:textColor="#ffff0000" 
        android:layout_marginTop="310dp"
        android:layout_marginLeft="23dp"/>
    <EditText
        android:inputType="textEmailAddress"
        android:hint="sample@mail.com"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailAddressFP" 
        android:layout_marginTop="328dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/successSendEmail"
        android:textColor="#86E1AB" 
        android:layout_marginTop="310dp"
        android:layout_marginLeft="23dp"/>
    <Button
        android:text="Send Email"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:id="@+id/btnSendEmail"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="23dp"
        android:backgroundTint="#66558A"/>
    <Button
        android:text="Go Back to Login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@id/btnBackToLogin"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="206dp"
        android:backgroundTint="#66558A"/>
</RelativeLayout>
