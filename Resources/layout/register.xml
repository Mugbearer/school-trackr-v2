<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd">
    <ImageView
        android:layout_width="50in"
        android:layout_height="50in"
        android:src="@drawable/bg"
        android:layout_marginTop="80dp"/>
    <TextView
        android:text="REGISTER"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-condensed"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/valEmailAddressR"
        android:textColor="#ffff0000"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="23dp"/>
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailAddressR" 
        android:hint="sample@mail"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valUsernameR"
        android:textColor="#ffff0000" 
        android:layout_marginTop="275dp"
        android:layout_marginLeft="23dp"/>
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/usernameR"
        android:hint="Username"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valPasswordR"
        android:textColor="#ffff0000" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwordR"
        android:hint="Password"
        android:layout_marginTop="328dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/successRegister"
        android:textColor="#ff00ff00" />
    <Button
        android:text="Register"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:id="@+id/btnRegister" 
        android:layout_marginTop="390dp"
        android:layout_marginLeft="23dp"
        android:backgroundTint="#66558A"/>
    <Button
        android:text="Go Back to Login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnBackToLogin"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="206dp"
        android:backgroundTint="#66558A"/>
</RelativeLayout>
