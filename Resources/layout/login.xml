<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd">

    <ImageView
        android:layout_width="50in"
        android:layout_height="50in"
        android:src="@drawable/bg"
        android:layout_marginTop="80dp"
        android:contentDescription="background"/>
    <ImageButton
        android:src="@drawable/lgn_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnLogIn"
        android:backgroundTint="@color/mtrl_btn_transparent_bg_color"
        android:layout_marginTop="290dp"
        android:contentDescription="button"/>
    <TextView
        android:text="Welcome Back!"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valUsernameL"
        android:textColor="#ffff0000" 
        android:layout_marginTop="240dp"
        android:layout_marginLeft="30dp"/>
    <EditText
        android:inputType="text"
        android:hint="Username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/usernameL"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valPasswordL"
        android:textColor="#ffff0000" 
        android:layout_marginTop="310dp"
        android:layout_marginLeft="30dp"
        android:clickable="true"/>
    <EditText
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/passwordL" 
        android:layout_marginTop="330dp"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:text="Go To Register"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:id="@+id/btnGoToRegister" 
        android:layout_marginTop="460dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#66558A"
        android:clickable="true"/>
    <TextView
        android:text="Forgot Password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoToForgotPassword"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="200dp"
        android:backgroundTint="#66558A"/>
</RelativeLayout>